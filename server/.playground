fragment foodCategoryField on FoodCategory {
  id
  name
}

query getFoodCategory {
  getFoodCategory(id: "5e261c8791983d740fc8ce18") {
    ...foodCategoryField
  }
}

query getFoodCategories {
  getFoodCategories {
    ...foodCategoryField
  }
}

mutation createFoodCategory {
  createFoodCategory(name: "Category 1") {
    ...foodCategoryField
  }
}

mutation updateFoodCategory {
  updateFoodCategory(
    id: "5e261d1a9e48a07454ba0d63",
    name: "Category 2"
	) {
    ...foodCategoryField
  }
}

mutation deleteFoodCategory {
  deleteFoodCategory(id: "5e261d1a9e48a07454ba0d63") {
    ...foodCategoryField
  }
}

##########################################################

fragment foodMenuField on FoodMenu {
  id
  name
  image
  latitude
  longitude
  category {
    id
    name
  }
}

query getFoodMenu {
  getFoodMenu(id: "5e26251852f6fa77462fcad8") {
		...foodMenuField
  }
}

query getFoodMenus {
  getFoodMenus {
    ...foodMenuField
  }
}

query getRandomizedFoodMenu {
  getRandomizedFoodMenu {
    ...foodMenuField
  }
}

mutation createFoodMenu {
  createFoodMenu(input: {
    name: "Food Menu 1",
    image: "url...",
    latitude: 111.11,
    longitude: -222.22,
    category: "5e261c8791983d740fc8ce18"
  }) {
    ...foodMenuField
  }
}

mutation updateFoodMenu {
  updateFoodMenu(
    id: "5e261ffbb019857647b9e1c3",
    input: {
      name: "Food Menu 2"
    }
	) {
    ...foodMenuField
  }
}

mutation deleteFoodMenu {
  deleteFoodMenu(id: "5e261ffbb019857647b9e1c3") {
    ...foodMenuField
  }
}
